<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sifu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="0.49"
            android:src="@drawable/grupo_sifu"/>

        <TextView
            android:id="@+id/textViewNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="2sp"
            android:padding="25sp"
            android:paddingBottom="10sp"
            android:text="@string/textConfig"
            android:textSize="18sp"
            android:textColor="@color/colorBlue"
            android:layout_below="@+id/textViewTitleConfig"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewReport"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.06">

            <Switch
                android:id="@+id/switch1"
                android:layout_width="60dp"
                android:layout_height="51dp"
                android:checked="true"
                android:textColor="@color/colorBlue"
                android:gravity="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Button" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</RelativeLayout>