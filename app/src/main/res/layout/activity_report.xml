<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8sp"
                android:layout_margin="25dp"
                android:padding="15dp"
                android:text="@string/textReport"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:background="@color/colorGrey"
                android:layout_alignParentStart="true"/>

            <!-- Nombre label -->
            <EditText
                android:id="@+id/input_nombre"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Nombre"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Apellidos label -->
            <EditText
                android:id="@+id/input_apellidos"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Apellidos"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Email label -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Email"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Email label -->
            <EditText
                android:id="@+id/input_telefono"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Email"
                android:inputType="number"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Provincia (Spinner) Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:prompt="@string/textProvincia"/>
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@color/colorWhite" />

                <Button
                    android:id="@+id/buttonEscogeImagen"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonEscogeImagen"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/buttonEscogeImagen2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonEscogeImagen"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/buttonBorrarImagen2"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonBorrarImagen"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonEscogeImagen3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonEscogeImagen"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/buttonBorrarImagen3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonBorrarImagen"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonEscogeImagen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonEscogeImagen"
                    android:visibility="gone"
                    android:background="@color/colorPrimary"
                    android:textColor="@color/colorWhite"/>

                <Button
                    android:id="@+id/buttonBorrarImagen4"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonBorrarImagen"
                    android:visibility="gone" />
            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <Button
                    android:id="@+id/buttonSubirImagen"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="@string/buttonSubirImagen" />
            </android.support.design.widget.TextInputLayout>

            <!-- Comentarios label -->
            <EditText
                android:id="@+id/input_comentarios"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Comentarios"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollHorizontally="false"/>

            <!-- Checkbox Label -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/textCheckBox" />
            </android.support.design.widget.TextInputLayout>

            <!-- Button enviar -->
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <Button
                    android:id="@+id/buttonEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/buttonReport"
                    android:background="@drawable/shape_orange_buttons"
                    android:text="@string/buttonSendReport"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"/>
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>