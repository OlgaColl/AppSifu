<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_sifu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewReport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2sp"
                android:layout_margin="25dp"
                android:padding="15dp"
                android:text="@string/textReport"
                android:textColor="@color/colorWhite"
                android:textSize="15sp"
                android:background="@color/colorGrey"
                android:layout_alignParentStart="true"/>

            <!-- Nombre label -->
            <EditText
                android:id="@+id/input_nombre"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Nombre"
                android:textSize="16sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Apellidos label -->
            <EditText
                android:id="@+id/input_apellidos"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Apellidos"
                android:textSize="16sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Email label -->
            <EditText
                android:id="@+id/input_email"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Email"
                android:textSize="16sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Teléfono label -->
            <EditText
                android:id="@+id/input_telefono"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Teléfono"
                android:textSize="16sp"
                android:inputType="number"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:textColor="@color/colorBlue"/>

            <!-- Provincia label -->
            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:textSize="16sp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue" />

            <!-- Comentarios label -->
            <EditText
                android:id="@+id/input_comentarios"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_forms_edittext"
                android:hint="Comentarios"
                android:textSize="16sp"
                android:paddingTop="15dp"
                android:paddingLeft="25sp"
                android:paddingRight="25sp"
                android:textColorHint="@color/colorBlue"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:lines="3"
                android:scrollHorizontally="false"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="25sp"
                android:paddingRight="25sp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSubirImagen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="10sp"
                        android:text="@string/textSubirImagen"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlue"
                        android:drawableRight="@drawable/ic_action_add_image"
                        android:drawablePadding="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@color/colorWhite"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageDelete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_action_delete"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textViewSubirImagen2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="10sp"
                        android:text="@string/textSubirImagen"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlue"
                        android:drawableRight="@drawable/ic_action_add_image"
                        android:drawablePadding="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@color/colorWhite"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageDelete2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_action_delete"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom|center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSubirImagen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="10sp"
                        android:text="@string/textSubirImagen"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlue"
                        android:drawableRight="@drawable/ic_action_add_image"
                        android:drawablePadding="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@color/colorWhite"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageDelete3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_action_delete"
                        android:visibility="gone"/>

                    <TextView
                        android:id="@+id/textViewSubirImagen4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="2sp"
                        android:paddingTop="10sp"
                        android:text="@string/textSubirImagen"
                        android:textSize="16sp"
                        android:textColor="@color/colorBlue"
                        android:drawableRight="@drawable/ic_action_add_image"
                        android:drawablePadding="20dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        android:layout_alignParentStart="true" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:srcCompat="@color/colorWhite"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/imageDelete4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ic_action_delete"
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:checked="true"
                    android:gravity="center_horizontal"
                    android:scaleX="1.5"
                    android:scaleY="1.5"/>

                <TextView
                    android:id="@+id/textSwitch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="25dp"
                    android:lineSpacingExtra="2sp"
                    android:padding="15dp"
                    android:layout_gravity="center"
                    android:text="@string/textCheckBox"
                    android:textColor="@color/colorBlue"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/buttonEnviar2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/shape_orange_buttons"
                    android:text="@string/buttonSendReport"
                    android:textSize="16sp"
                    android:textColor="@color/colorWhite"
                    android:visibility="invisible"/>

                <Button
                    android:id="@+id/buttonEnviar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="25dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/shape_orange_buttons"
                    android:text="@string/buttonSendReport"
                    android:textSize="15sp"
                    android:textColor="@color/colorWhite"
                    android:layout_toRightOf="@id/buttonEnviar2" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
